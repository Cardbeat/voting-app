html
  head
    title Poll App
    link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
    script(type='text/javascript', src='/javascripts/login.js')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.1/css/materialize.min.css')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.1/js/materialize.min.js')
  body
    header
      nav.indigo
        .nav-wrapper
          a(href="/dashboard")  Poll App
          ul#nav-mobile.right.hide-on-med-and-down
            li
              a(href='/users/login') Login
    main
      .container
        .row
          form.col.s12(method='POST', action='/users/register')
            .row
              .input-field.col.s6.offset-s3
                input#name.validate(type='text', name='name')
                label(for='name') Name
            .row
              .input-field.col.s6.offset-s3
                input#name.validate(type='text', name='username')
                label(for='name') Username
            .row
              .input-field.col.s6.offset-s3
                input#password.validate(type='password', name='password')
                label(for='password') Password
            .row
              .input-field.col.s6.offset-s3
                input#confirmpassword.validate(type='password', name='password2')
                label(for='password') Confirm Password 
            .row
              .input-field.col.s6.offset-s3
                input#email.validate(type='email', name='email')
                label(for='email') Email
            button.btn.btn-primary.col.s4.offset-s4.indigo(type='submit') sign up
